#include <stdio.h>
#include <conio.h>
#include <stdlib.h>
main()
{
    int jmhs,i,brs=7,nujian,jnilai=0,rata2,max=-999;
    char nim[10],nama[30];
    system("cls");
    printf("Jumlah Mahasiswa : "); scanf("%d",&jmhs);
    printf("Daftar Nilai Ujian\n");
    printf("Mata Kuliah : Pemrograman Dasar\n\n");
    printf("NO   NIM      Nama Mahasiswa         Nilai Ujian\n");
    printf("------------------------------------------------\n");
    for(i=1;i<=jmhs;i++)
    {
        brs++;
        gotoxy(1,brs); printf("%d",i);
        gotoxy(6,brs); scanf("%s",&nim);
        gotoxy(15,brs); scanf("%s",&nama);
        gotoxy(38,brs); scanf("%d",&nujian);

        jnilai += nujian;
        if(nujian>max){
            max=nujian;
        }
    }
    
    rata2 = jnilai / jmhs;
    printf("------------------------------------------------\n");
    printf("Jumlah Nilai = %d\n",jnilai);
    printf("Nilai Rata-rata = %d\n",rata2);
    printf("Nilai Terbesar = %d",max);

    getch();
    return 0;
}
